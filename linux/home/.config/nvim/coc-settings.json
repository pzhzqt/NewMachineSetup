{
    "languageserver": {
        "golang": {
            "command": "~/go/bin/gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "h",
        "cpp",
        "cc",
        "hpp",
        "c",
        "json"
    ],
    "clangd.arguments": [
        "-cross-file-rename"
    ],
    "python.pythonPath": "~/pyenv/bin/python"
}
